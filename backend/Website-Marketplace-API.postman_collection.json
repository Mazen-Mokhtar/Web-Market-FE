        {
          "name": "Get My Sales",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sales/my-sales",
              "host": ["{{baseUrl}}"],
              "path": ["sales", "my-sales"]
            }
          }
        },
        {
          "name": "Create Sale",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"websiteId\": \"website-id-here\",\n  \"amount\": 500,\n  \"discountAmount\": 50,\n  \"paymentMethod\": \"card\",\n  \"notes\": \"Additional notes\",\n  \"deliveryMethod\": \"email\",\n  \"deliveryDetails\": \"Send to john@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sales",
              "host": ["{{baseUrl}}"],
              "path": ["sales"]
            }
          }
        },
        {
          "name": "Get Sale by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sales/:id",
              "host": ["{{baseUrl}}"],
              "path": ["sales", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "sale-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Mark Sale as Completed",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sales/:id/complete",
              "host": ["{{baseUrl}}"],
              "path": ["sales", ":id", "complete"],
              "variable": [
                {
                  "key": "id",
                  "value": "sale-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Mark Sale as Delivered",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sales/:id/deliver",
              "host": ["{{baseUrl}}"],
              "path": ["sales", ":id", "deliver"],
              "variable": [
                {
                  "key": "id",
                  "value": "sale-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            }
          }
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",

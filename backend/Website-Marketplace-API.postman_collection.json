{
  "info": {
    "name": "Website Marketplace API",
    "description": "API collection for Website Marketplace",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"buyer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Logout User",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Websites",
      "item": [
        {
          "name": "Get All Websites",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/websites",
              "host": ["{{baseUrl}}"],
              "path": ["websites"]
            }
          }
        },
        {
          "name": "Get Available Websites",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/websites/available",
              "host": ["{{baseUrl}}"],
              "path": ["websites", "available"]
            }
          }
        },
        {
          "name": "Get Website by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/websites/:id",
              "host": ["{{baseUrl}}"],
              "path": ["websites", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "website-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Get Website by Slug",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/websites/slug/:slug",
              "host": ["{{baseUrl}}"],
              "path": ["websites", "slug", ":slug"],
              "variable": [
                {
                  "key": "slug",
                  "value": "website-slug-here"
                }
              ]
            }
          }
        },
        {
          "name": "Create Website",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "E-commerce Store",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "A modern e-commerce website",
                  "type": "text"
                },
                {
                  "key": "demoUrl",
                  "value": "https://demo.example.com",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "500",
                  "type": "text"
                },
                {
                  "key": "type",
                  "value": "ecommerce",
                  "type": "text"
                },
                {
                  "key": "categoryId",
                  "value": "category-id-here",
                  "type": "text"
                },
                {
                  "key": "folderId",
                  "value": "folder-id-here",
                  "type": "text"
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/websites",
              "host": ["{{baseUrl}}"],
              "path": ["websites"]
            }
          }
        },
        {
          "name": "Update Website",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Website Name\",\n  \"price\": 600\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/websites/:id",
              "host": ["{{baseUrl}}"],
              "path": ["websites", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "website-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Website",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/websites/:id",
              "host": ["{{baseUrl}}"],
              "path": ["websites", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "website-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Buy Website",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/websites/:id/buy",
              "host": ["{{baseUrl}}"],
              "path": ["websites", ":id", "buy"],
              "variable": [
                {
                  "key": "id",
                  "value": "website-id-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Sales",
      "item": [
        {
          "name": "Get All Sales",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/sales",
              "host": ["{{baseUrl}}"],
              "path": ["sales"]
            }
